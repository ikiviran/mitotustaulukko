{
    "name": "mitotustaulukko",
    "version": "1.0.0",
    "description": "",
    "type": "module",
    "scripts": {
        "zap": "export $(cat .env | grep -m 1 DATABASE_URL | xargs) && npx zapatos",
        "build:frontend": "vite build src/frontend",
        "build:backend": "tsc --build ./src/backend/tsconfig.json",
        "build": "npm run build:frontend && npm run build:backend",
        "watch:backend:ts": "tsc --build ./src/backend/tsconfig.json --watch --preserveWatchOutput --pretty",
        "watch:backend:js": "ENV=local nodemon --watch ./output/backend --watch ./output/common --delay 500ms ./output/backend/server.js",
        "watch:frontend": "vite src/frontend",
        "dev": "concurrently --kill-others --verbose --names \"backend:ts,backend:js,frontend\" \"npm run watch:backend:ts\" \"npm run watch:backend:js\" \"npm run watch:frontend\""
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@types/express": "^5.0.0",
        "@types/lodash": "^4.17.15",
        "@types/node": "^22.13.1",
        "@types/pg": "^8.11.11",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^19.0.3",
        "@types/react-redux": "^7.1.34",
        "concurrently": "^9.1.2",
        "dbmate": "^2.25.0",
        "nodemon": "^3.1.9",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "vite": "^6.0.11",
        "zapatos": "^6.4.4"
    },
    "dependencies": {
        "@mui/material": "^6.4.2",
        "@reduxjs/toolkit": "^2.5.1",
        "@trpc/client": "^10.45.2",
        "@trpc/server": "^10.45.2",
        "body-parser": "^1.20.3",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "lodash": "^4.17.21",
        "pg": "^8.13.1",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "react-redux": "^9.2.0",
        "yup": "^1.6.1"
    }
}
