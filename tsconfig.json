{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@a10base/*": [
        "./packages/base/src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "aws-infra",
    "output"
  ]
}